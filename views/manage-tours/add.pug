extends ../account

block userview
  form.my-5.ml-3#add-new-tour-form(enctype="multipart/form-data")
    h4.mb-3.text-center ADD NEW TOUR
    .form-group
      label(for="name") Name
      input.form-control#name(type="text")
      .invalid-feedback

    .form-group
      label(for="price") Price
      input.form-control#price(type="number")
      .invalid-feedback

    .form-group
      label(for="duration") Duration
      input.form-control#duration(type="number")
      .invalid-feedback

    .form-group
      label(for="difficulty") Difficulty
      select.form-control#difficulty(name="difficulty")
        option(value="") --Choose a difficulty--
        option easy
        option medium
        option difficult
      .invalid-feedback

    .form-group
      label(for="maxGroupSize") Max Group Size
      input.form-control#maxGroupSize(type="number")
      .invalid-feedback
    //- div(class="form-group")
    //-   label(for="image-cover") Image Cover
    //-   input(type="file" class="form-control" id="image-cover" value=`${tour.imageCover}`)
    
    .form-group
      label(for="summary") Summary
      input.form-control#summary(type="text")
      .invalid-feedback
    
    .form-group
      label(for="description") Description
      textarea.form-control#description(rows="5" name="description" style="resize:none;")
      .invalid-feedback
    
    .form-group
      label(for="guides") Guides
      select.form-control#guides(name="guides" multiple)
        each guide in guides
          option(value=`${guide._id}`)= guide.name
      .invalid-feedback
    
    // FILE UPLOAD INPUT
    .m-auto.d-flex.justify-content-center.col-sm-6
      img#preview.img-thumbnail.w-50.h-50(src=`/img/tours/default.jpeg`)
    label(for="imageCover") Image Cover
    input#imageCover(type="file" name="imageCover" accept="image/*" style="visibility: hidden;position: absolute;")
    .input-group.mb-3
      input.form-control#file(type="text" disabled placeholder="Upload File")
      .input-group-append
        button.browse.btn.btn-dark(type="button") Browse...
    #commonError.text-danger

    // UPLOAD MULTIPLE IMAGES
    .form-group
      label(for="images") Images
      input.form-control#images(type="file" name="images" multiple)
      .invalid-feedback

    // UPLOAD LOCATIONS
    .form-group
      label(for="totalNumberOfLocations") Total number of locations
      .input-group
        input.form-control(type="number" min="1")#totalNumberOfLocations
        span.input-group-btn
          button.btn.btn-dark#totalNumberOfLocations(type="button") OK

    .row#locations-container
      //- locations form...
    
    //- #map

    button.btn.btn-success.btn-block(type="submit") Add