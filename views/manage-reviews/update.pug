extends ../account

block userview
  form.my-5.ml-3#change-review-form
    h4.mb-3.text-center Update Review

    .form-group
      label(for="review-id") Id
      input.form-control#review-id(type="text" value=`${review._id}` disabled)
      .invalid-feedback

    .form-group
      label(for="tour") Tour
      select.form-control#tour(name="tour")
        option(value="") --Choose a tour--
        option(selected value=`${review.tour._id}`)= review.tour.name
        each tour in restOfTours
            option(value=`${tour._id}`)= tour.name
      .invalid-feedback

    .form-group
      label(for="user") User
      select.form-control#user(name="user")
        option(value="") --Choose a user--
        option(selected value=`${review.user._id}`)= review.user.email
        each user in restOfUsers
            option(value=`${user._id}`)= user.email
      .invalid-feedback
    
    .form-group
      label(for="review") Content
      textarea.form-control#review(rows="5" name="review" style="resize:none;")= review.review
      .invalid-feedback

    .form-group
      label(for="rating") Rating
      input.form-control#rating(type="number" min='1' max='5' value=`${review.rating}`)
      .invalid-feedback

    button.btn.btn-success.btn-block(type="submit") Save changes